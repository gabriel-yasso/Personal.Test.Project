@page
@model Personal.Test.Project.Web.Pages.PersonalTasks.IndexModel
@{
}
<h1 class="mb-4 text-primary">Personal Tasks</h1>

<form method="post" class="mb-4">
    <div class="mb-3">
        <label asp-for="ViewModel.Title" class="form-label"></label>
        <input type="text" asp-for="ViewModel.Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ViewModel.Description" class="form-label"></label>
        <input type="text" asp-for="ViewModel.Description" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Add Task</button>
</form>

<ul class="list-group">
    @foreach (var task in Model.PersonalTasks)
    {
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div>
                <h5 class="mb-1">@task.Title</h5>
                <p class="mb-1 text-muted">@task.Description</p>
            </div>
            <form method="post" class="ms-3">
                <input type="hidden" asp-for="Id" value="@task.Id" />
                <button type="submit" asp-page-handler="delete" class="btn btn-outline-danger btn-sm">
                    Delete
                </button>
            </form>
        </li>
    }
</ul>
